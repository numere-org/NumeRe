<install>
	<info>
		-author="Erik Hänel"
		-flags=DISABLE_SCREEN_OUTPUT
		-name="cmplx"
	<endinfo>
	procedure $cmplx~divide(a = 1, b = 0, c = 1, d = 0, re, im)
		re = (a*c + b*d)/(c^2+d^2);
		im = (b*c - a*d)/(c^2+d^2);
		return void
	endprocedure
	procedure $cmplx~multiply(a = 1, b = 0, c = 1, d = 0, re, im)
		re = (a*c - b*d);
		im = (b*c + a*d);
		return void
	endprocedure
	procedure $cmplx~r2polar(a = 1, b = 0, amp, phase)
		amp = norm(a,b);
		phase = phi(a,b);
		return void
	endprocedure
	procedure $cmplx~p2rect(amp = 1, phase = 0, re, im)
		re = amp * cos(phase);
		im = amp * sin(phase);
		return void
	endprocedure
	
